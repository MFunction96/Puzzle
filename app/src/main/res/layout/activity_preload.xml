<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:orientation="vertical"
    android:paddingBottom="160dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="20dip"
    android:stretchColumns="*"
    tools:context="xyz.mfbrain.puzzle.PreloadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/btn_reg"
            style="@style/ButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:background="@color/white"
            android:text="@string/login"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <Button
            android:id="@+id/about"
            style="@style/ButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/adbtn" />
    </LinearLayout>

    <TextView
        android:id="@+id/titlecn"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:gravity="center"
        android:textSize="50sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <TableRow
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/start"
                style="@style/ButtonStyle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/adbtn"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/challenge"
                style="@style/ButtonStyle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/challengebtn" />

        </TableRow>

        <TableRow
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/free"
                style="@style/ButtonStyle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/freebtn" />

            <Button
                android:id="@+id/ranklist"
                style="@style/ButtonStyle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ranklistbtn" />
        </TableRow>


    </TableLayout>


</LinearLayout>