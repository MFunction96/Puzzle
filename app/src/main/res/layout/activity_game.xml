<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="20dip"
    android:stretchColumns="*"
    android:keepScreenOn="true"
    android:background="@drawable/background5"
    style="@style/AppTheme"
    tools:context="xyz.mfbrain.puzzle.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/controlpanel"
        android:baselineAligned="false">

        <Button
            android:id="@+id/pausegame"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/ButtonStyle"
            android:text="@string/pause"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/hint"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/ButtonStyle"
            android:gravity="center"
            android:text="@string/hint" />

        <Button
            android:id="@+id/restart"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/ButtonStyle"
            android:text="@string/restart" />

        <Button
            android:id="@+id/backmenu"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/ButtonStyle"
            android:text="@string/backmenu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:contentDescription="@string/description"
            android:layout_weight="2"
            android:minWidth="100dip"
            tools:ignore="NestedWeights" />
        <TableLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:stretchColumns="*"
            android:paddingTop="10dip">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:text="@string/winner"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded"/>
                <TextView
                    android:id="@+id/recorder"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:text="@string/record"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/record"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:text="@string/current"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded"/>
                <TextView
                    android:id="@+id/player"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded"
                    android:text="@string/timepast"
                    android:textSize="16sp"/>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded">
                    <TextView
                        android:id="@+id/tv_dispaly_time"
                        android:text="@string/o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"/>
                    <TextView
                        android:text="@string/s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_dispaly_time"
                        android:layout_toEndOf="@+id/tv_dispaly_time"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

        </TableLayout>

    </LinearLayout>


</LinearLayout>

